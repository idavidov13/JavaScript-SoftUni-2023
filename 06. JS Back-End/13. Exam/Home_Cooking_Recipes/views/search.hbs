<section class="search-container">
  <h2>Search Recipes</h2>
  <form method="get">
    <input
      type="text"
      id="search"
      name="search"
      placeholder="Search for recipes..."
      {{#if data.search}}value="{{data.search}}{{/if}}"
    />
    <button type="submit">Search</button>
  </form>
  <div class="search-results">
    {{#if recipes}}
        {{#each recipes}}
        {{> recipe}}
        {{/each}}
  {{else}}
    <p class="no-match">There are no recipes found yet!</p>
    {{/if}}
  </div>
</section>